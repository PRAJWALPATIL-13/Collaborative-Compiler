<div class="container">
    <div class="col-sm-6 col-sm-offset-3">
        <h1><span class="fa fa-sign-in"></span> Signup</h1>

        <!-- show any messages that come back with authentication -->
        <% if (messages.error) { %>
            <div class="alert alert-danger">
                <%= messages.error %>
            </div>
            <% } %>

                <!-- LOGIN FORM -->
                <form action="/user/register" class="needs-validation" novalidate method="post">
                    <div class="form-group">
                        <label class="form-label">Name</label>
                        <input id="name" name="name" class="form-control" required pattern="[a-zA-Z ]+" />
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Enter Valid Name.</div>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="email" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" />
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Enter Valid Email.</div>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="password" required />
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Enter Valid Password.</div>
                    </div>

                    <button type="submit" class="btn btn-warning btn-lg">Signup</button>
                </form>

                <hr />

                <p>Already have an account? <a href="/user/login">Login</a></p>
                <p>Or go <a href="/">home</a>.</p>
    </div>
</div>
<script>
    (function() {
        "use strict";

        var forms = document.querySelectorAll(".needs-validation");

        Array.prototype.slice.call(forms).forEach(function(form) {
            form.addEventListener(
                "submit",
                function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }

                    form.classList.add("was-validated");
                },
                false
            );
        });
    })();
</script>